{
  "manifest_version": 2,
  "name": "WebRTC Screen Sharing",
  "description": "Share your screen using WebRTC",
  "version": "1.0",
  "permissions": ["desktopCapture", "tabs", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  }
}
